{
  "manifest_version": 3,
  "name": "Student Buddy",
  "version": "1.0",
  "description": "A Chrome extension to help students manage tasks, quick links, and study time.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications", "alarms"]
}
